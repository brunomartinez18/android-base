<resources>

    <style name="horizontalSmallPaddingHomeRecyclersViews" parent="Widget.AppCompat.ListView">
        <item name="android:paddingStart">@dimen/medium_margin</item>
        <item name="android:paddingEnd">@dimen/medium_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name ="android:clipToPadding">false</item>
    </style>

    <style name="horizontalHomeRecyclersViews" parent="Widget.AppCompat.ListView">
        <item name="android:paddingStart">@dimen/large_margin</item>
        <item name="android:paddingEnd">@dimen/medium_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name ="android:clipToPadding">false</item>
    </style>

    <style name="verticalHomeRecyclersViews" parent="Widget.AppCompat.ListView">
        <item name="android:paddingStart">@dimen/large_margin</item>
        <item name="android:paddingEnd">@dimen/medium_margin</item>
        <item name="android:orientation">vertical</item>
        <item name ="android:clipToPadding">false</item>
    </style>

    <style name="homeTextViews" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>